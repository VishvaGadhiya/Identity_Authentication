@page
@model ConfirmEmailChangeModel

@{
    ViewData["Title"] = "Confirm email change";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4 p-4">
                <h3 class="text-center mb-4">@ViewData["Title"]</h3>

                <partial name="_StatusMessage" model="Model.StatusMessage" />

                @* Optionally, you can add a button to navigate to login or home *@
                <div class="text-center mt-4">
                    <a asp-page="/Index" class="btn btn-primary">Go to Home</a>
                    <a asp-page="/Account/Login" class="btn btn-outline-primary ms-2">Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
