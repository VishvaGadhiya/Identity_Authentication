@page
@model ResetPasswordConfirmationModel

@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4 p-4 text-center">
                <h3 class="mb-4">@ViewData["Title"]</h3>
                <p>Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.</p>
                <a asp-page="./Login" class="btn btn-primary mt-3">Log in</a>
            </div>
        </div>
    </div>
</div>
