@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow rounded-4 p-4">
                <h3 class="text-center mb-4">Password Reset Link Sent</h3>
                <p class="text-center">
                    Please check your email to reset your password. If the email is registered, you will receive a link shortly.
                </p>

                <div class="mt-4 text-center">
                    <a asp-page="./Login" class="btn btn-primary w-100">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>